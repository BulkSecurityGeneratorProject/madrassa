<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>
    <property name="now" value="sysdate" dbms="oracle"/>

    <property name="autoIncrement" value="true" dbms="mysql,h2,postgresql,oracle"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle"/>

    <!--
        Added the entity Scholar.
    -->
    <changeSet id="20160327172430" author="jhipster">
        <createTable tableName="scholar">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="scholar_number" type="integer">
                <constraints nullable="false" />
            </column>
            
            <column name="sex" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            
            <column name="name" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            
            <column name="first_name" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            
            <column name="birth_date" type="timestamp">
                <constraints nullable="false" />
            </column>
            
            <column name="birth_place" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            
            <column name="photo" type="blob">
                <constraints nullable="true" />
            </column>
            <column name="photo_content_type" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            
            <column name="nb_years_xp" type="integer">
                <constraints nullable="false" />
            </column>
            
            <!-- jhipster-needle-liquibase-add-column - Jhipster will add columns here, do not remove-->
        </createTable>
        <dropDefaultValue tableName="scholar" columnName="birth_date" columnDataType="datetime"/>
                <createTable tableName="scholar_person_in_charge">
            <column name="person_in_charges_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="scholars_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey columnNames="scholars_id, person_in_charges_id" tableName="scholar_person_in_charge"/>

        <addForeignKeyConstraint baseColumnNames="scholars_id"
                                 baseTableName="scholar_person_in_charge"
                                 constraintName="fk_scholar_person_in_charge_personincharge_id"
                                 referencedColumnNames="id"
                                 referencedTableName="scholar"/>

        <addForeignKeyConstraint baseColumnNames="person_in_charges_id"
                                 baseTableName="scholar_person_in_charge"
                                 constraintName="fk_scholar_person_in_charge_scholar_id"
                                 referencedColumnNames="id"
                                 referencedTableName="person_in_charge"/>
        
    </changeSet>
</databaseChangeLog>
